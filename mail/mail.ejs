<% const themeConfig = require('./config/themeConfig'); %>
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Inquiry</title>
  </head>
  <body>
    <table
      border="0"
      width="100%"
      cellpadding="0"
      cellspacing="0"
      style="
        font-family: Arial, Helvetica, sans-serif;
        font-size: 12px;
        font-weight: normal;
      "
    >
      <tbody>
        <tr>
          <td height="30"></td>
        </tr>
        <tr style="padding: 0 25px">
          <td width="100%" align="center" valign="top">
            <table
              width="800"
              border="0"
              cellpadding="0"
              cellspacing="0"
              align="center"
            >
              <tbody>
                <tr>
                  <td width="600">
                    <img
                      src="theme/achievers/images/logo.png"
                      width="80"
                      alt="Achievers"
                    />
                  </td>
                  <td
                    width="200"
                    style="text-align: right; vertical-align: bottom"
                  >
                    <b
                      style="
                        color: #000;
                        font-size: 12px;
                        font-weight: normal;
                        text-align: right;
                      "
                      >Achievers Learning Center</b
                    >
                  </td>
                </tr>
                <tr>
                  <td
                    style="border-bottom: 1px solid #2a8fdd"
                    height="10"
                    colspan="2"
                  ></td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>

        <tr style="padding: 0 25px">
          <td width="100%" align="center" valign="top">
            <table
              width="800"
              border="0"
              cellpadding="0"
              cellspacing="0"
              align="center"
            >
              <tbody>
                <tr>
                  <td height="50" colspan="3"></td>
                </tr>
                <tr>
                  <td
                    style="
                      vertical-align: top;
                      font-size: 18px;
                      color: #000;
                      font-weight: bold;
                    "
                  >
                    <%= mail_title %> <br />
                  </td>
                </tr>

                <tr>
                  <td height="10" colspan="3"></td>
                </tr>
                <tr>
                  <td style="color: #666; font-size: 14px; line-height: 24px">
                    Dear Sir/Madam,
                    <p></p>
                    We have received an <%= mail_title %>.
                  </td>
                </tr>
                <tr>
                  <td height="10" colspan="3"></td>
                </tr>
                <tr>
                  <td height="10" colspan="3"></td>
                </tr>

                <tr>
                  <td
                    style="
                      font-size: 14px;
                      line-height: 20px;
                      color: #666;
                      font-weight: normal;
                    "
                  >
                    <% if (p_name && p_name !== null) { %>
                    <b>Package name:</b> <%= p_name %> <br>
                    <% } %>

                    <% if (name && name !== null) { %>
                    <b>Name:</b> <%= name %> <br>
                    <% } %>

                    <% if (email && email !== null) { %>
                    <b>Email:</b> <%= email %> <br />
                    <% } %>

                    <% if (phone && phone !== null) { %>
                    <b>Phone:</b> <%= phone %> <br />
                    <% } %>

                    <% if (address && address !== null) { %>
                    <b>Address:</b> <%= address %> <br />
                    <% } %>

                    <% if (message && message !== null) { %>
                    <b>Message:</b> <%= message %> <br />
                    <% } %>

                    <% if (themeConfig.MAIL_COLUMN) { %>
                      <% Object.entries(themeConfig.MAIL_COLUMN).forEach(([key, value], index) => { %>
                        <b><%= value %></b> <%= eval(`column_${index + 1}`) || "N/A" %> <br />
                      <% }) %>
                    <% } %>
                    
                   
                  </td>
                </tr>
                <tr>
                  <td height="50" colspan="3"></td>
                </tr>
                <tr>
                  <td height="50" colspan="3"></td>
                </tr>
                <tr>
                  <td colspan="3">
                    <table
                      width="100%"
                      border="0"
                      cellpadding="0"
                      cellspacing="0"
                    >
                      <td
                        style="
                          vertical-align: top;
                          font-size: 16px;
                          color: #000;
                          font-weight: bold;
                        "
                      >
                        Goodwill Cleaning <br />
                        <b
                          style="
                            font-size: 12px;
                            color: #000;
                            font-weight: bold;
                          "
                          ><i style="font-weight: normal; font-style: normal"
                            >Achievers Learning Center</i
                          ></b
                        >
                      </td>
                    </table>
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>

        <tr style="padding: 0 25px">
          <td width="100%" align="center" valign="top">
            <table
              width="800"
              border="0"
              cellpadding="0"
              cellspacing="0"
              align="center"
            >
              <tbody>
                <tr>
                  <td height="10" colspan="3"></td>
                </tr>
                <tr>
                  <td
                    height="10"
                    colspan="3"
                    style="border-bottom: 1px solid #ccc"
                  ></td>
                </tr>
                <tr>
                  <td style="color: #000; font-size: 12px; line-height: 24px">
                    Â© <%= new Date().getFullYear() %> Achievers Learning Center
                  </td>
                </tr>
              </tbody>
            </table>
          </td>
        </tr>
      </tbody>
    </table>
  </body>
</html>

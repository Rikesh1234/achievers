<%- include('../partials/header/header') %>

<!-- intro-section -->
<% pageData = null %> <%pages.forEach(page=>{ %> <%if(page.slug == 'contact'){
%> <% pageData = page %> <% } %> <% })%>
<section class="listing-intro">
  <div class="container">
    <div class="overlay"></div>
    <div class="intro-header">
      <div class="into">
        <% if (pageData != null){ %>
        <h1><%= pageData.title %></h1>
        <% }else { %>
        <h1>Contact Us</h1>
        <% } %>
      </div>
      <div class="breadcrumbs">
        <ul>
          <li>Home</li>
          <li class="icon"><i class="fa-solid fa-chevron-right"></i></li>
          <li>Contact</li>
        </ul>
      </div>
    </div>
  </div>
</section>
<!-- end of  intro-section -->

<section class="contact-page">
  <!-- Top Section: Google Map -->
  <% if (pageData != null){ %> <% pageData.customFields.forEach(field => { %> <%
  if (field.fieldName === 'location') { %>
  <div class="map-container" style="width: 100%; height: 400px">
    <%= field.value %>
  </div>
  <% } %> <% }) %><% } %>

  <!-- Bottom Section: Company Info and Contact Form -->
  <div class="container my-5">
    <div class="row">
      <!-- Company Info Section -->
      <div class="col-12 col-md-6" data-aos="fade-up">
        <h2 class="mb-4">Our Office</h2>
        <div class="company-info p-4 bg-light rounded">
          <div class="info-item mb-4 d-flex align-items-center">
            <i class="fa-solid fa-location-dot fa-2x text-primary"></i>
            <div class="ms-3">
              <% if (pageData != null){ %> <%
              pageData.customFields.forEach(field => { %> <% if (field.fieldName
              === 'address') { %>
              <h5>Address</h5>
              <p><%= field.value %></p>
              <% } %> <% }) %><% } %>
            </div>
          </div>

          <div class="info-item mb-4 d-flex align-items-center">
            <i class="fa-solid fa-phone fa-2x text-success"></i>
            <div class="ms-3">
              <% if (pageData != null){ %> <%
              pageData.customFields.forEach(field => { %> <% if (field.fieldName
              === 'phone') { %>
              <h5>Phone</h5>
              <p><%= field.value %></p>
              <% } %> <% }) %><% } %>
            </div>
          </div>

          <div class="info-item mb-4 d-flex align-items-center">
            <i class="fa-solid fa-envelope fa-2x text-danger"></i>
            <div class="ms-3">
              <% if (pageData != null){ %> <%
              pageData.customFields.forEach(field => { %> <% if (field.fieldName
              === 'email') { %>
              <h5>Email</h5>
              <p><%= field.value %></p>
              <% } %> <% }) %><% } %>
            </div>
          </div>

          <div class="info-item d-flex align-items-center">
            <i class="fa-solid fa-clock fa-2x text-info"></i>
            <div class="ms-3">
              <% if (pageData != null){ %> <%
              pageData.customFields.forEach(field => { %> <% if (field.fieldName
              === 'office_hours') { %>
              <h5>Office Hours</h5>
              <p><%= field.value %></p>
              <% } %> <% }) %> <% } %>
            </div>
          </div>
        </div>
      </div>

      <!-- Contact Form Section -->
      <div class="col-12 col-md-6" data-aos="fade-up">
        <h2>Contact Us</h2>
        <form action="#" method="post">
          <div class="form-group mb-3">
            <label for="name">Full Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              placeholder="Enter your full name"
              required
            />
          </div>
          <div class="form-group mb-3">
            <label for="email">Email Address</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              placeholder="Enter your email"
              required
            />
          </div>
          <div class="form-group mb-3">
            <label for="message">Message</label>
            <textarea
              class="form-control"
              id="message"
              name="message"
              rows="5"
              placeholder="Enter your message"
              required
            ></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
      </div>
    </div>
  </div>
</section>
<!-- Include Footer -->
<%- include('../partials/footer/footer') %>

<!-- AppointMent Form Modal -->
<div
  class="modal fade"
  id="appointmentModal"
  tabindex="-1"
  aria-labelledby="appointmentModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="appointmentModalLabel">Appointment</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body">
        <form id="studentForm" action="javascript:void(0);" method="post">
          <!-- Name Input -->
          <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              name="name"
              required
            />
          </div>

          <div class="mb-3">
            <label for="name" class="form-label">Email</label>
            <input
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            />
          </div>

          <div class="mb-3">
            <label for="name" class="form-label">Phone</label>
            <input
              type="phone"
              class="form-control"
              id="phone"
              name="phone"
              required
            />
          </div>

          <!-- Tution Type Dropdown -->

          <div class="mb-3 col-12">
            <label for="tutionType" class="form-label">tutionType</label>

            <select
              name="tution-type"
              class="form-control select2"
              id="tution-type"
              style="width: 100%"
              required
            >
              <option value="">Select Type</option>
              <option value="Home Tution">Home Tution</option>
              <option value="Physical Tution">Physical Tution</option>
              <option value="Online Tution">Online Tution</option>
            </select>
          </div>

          <div class="mb-3 col-12">
            <label for="timeShift" class="form-label">Shift</label>
            <select
              name="time-shift"
              class="form-control select2"
              id="time-shift"
              style="width: 100%"
              required
            >
              <option value="">Select Shift</option>
              <option value="Morning">Morning</option>
              <option value="Evening">Evening</option>
            </select>
          </div>

          <div class="mb-3 col-12">
            <label for="timeShift" class="form-label">Select Subject</label>

            <select
              name="subject"
              class="form-control select2"
              id="subject"
              style="width: 100%"
              multiple="multiple"
              required
            >
              <option value="">Select Subject</option>
              <option value="Physic">Physic</option>
              <option value="Chemistry">Chemistry</option>
              <option value="Maths">Mathmathics</option>
              <option value="Account">Account</option>
              <option value="Economics">Economics</option>
            </select>
          </div>

          <!-- Message -->
          <div class="mb-3">
            <label for="studentMessage" class="form-label">Message</label>
            <textarea
              class="form-control"
              id="studentMessage"
              name="studentMessage"
              rows="3"
            ></textarea>
          </div>

          <!-- Submit Button -->
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
<!-- AppointMent form -->


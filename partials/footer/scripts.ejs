<script>
  $(document).ready(function () {
  $('#studentForm').on('submit', function (e) {
    e.preventDefault();

    const formData = {
      name: $('#name').val(),
      phone: $('#phone').val(),
      email: $('#email').val(),
      address: $('#address').val(),
      message: $('#message').val() ?? null,
      column_1: $('#tution-type').val(),
      column_2: $('#time-shift').val(),
      column_3: $('#subject').val(),
    };

    $.ajax({
      type: 'POST',
      url: '/mail/sendInquiries', // Make sure this URL matches the backend route
      data: formData,
      success: function (response) {
        // Show success message using SweetAlert
        
        Swal.fire({
          title: 'Success!',
          text: 'Your appointment request has been sent successfully!',
          icon: 'success',
          confirmButtonText: 'OK',
        });
      },
      error: function (error) {
        // Show error message using SweetAlert
        Swal.fire({
          title: 'Error!',
          text: 'Something went wrong. Please try again later.',
          icon: 'error',
          confirmButtonText: 'OK',
        });
      },
    });
  });
});
</script>

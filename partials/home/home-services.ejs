<section class="service-section">
  <div class="container">
    <div class="serv-header d-flex justify-content-between align-items-center">
      <% categories.forEach(cat => { %> <% if (cat.slug === "services") { %>
      <div class="sub-title" data-aos="fade-up"><%= cat.title %></div>
      <div class="btn" data-aos="fade-up">
        <a href="#">View All Courses</a>
      </div>
      <% } %><% }) %>
    </div>
    <div class="owl-carousel service-carousel">
      <% if (posts && posts.length > 0) { %> <% posts.forEach(post => { %> <% if
      (post.category[0].slug === 'services') { %>
      <a href="/post/<%= post._id %>">
        <div class="course-card" data-aos="fade-up">
          <div class="course-content" data-aos="fade-up">
            <span class="category"><%= post.tag_line %></span>
            <p class="service-title"><%= post.title %></p>
            <p><%- truncateWords(cat.summary, 50) %></p>
            <div class="course-meta">
              <span class="more-text"
                >More&nbsp;<i class="fa-solid fa-angle-right"></i
              ></span>
            </div>
          </div>
        </div>
      </a>
      <% } %> <% }) %> <% } %>
      <!-- Repeat similar blocks for additional courses -->
    </div>
  </div>
</section>

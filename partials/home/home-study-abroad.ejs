<section class="study-section" id="study-section">
  <div class="overlay"></div>
  <div class="container">
    <div
      class="serv-header d-flex justify-content-between align-items-center"
    >
    <% categories.forEach(cat => { %> <% if (cat.slug === "course") { %>
      <div class="sub-title" data-aos="fade-up"><%= cat.title %></div>
      <div class="btn" data-aos="fade-up">
        <a href="#" style="color: #fff">View All Courses</a>
      </div>
      <% } %><% }) %>
    </div>
    <div class="row justify-content-center gap-3 align-items-center">
      <% if (posts && posts.length > 0) { %> <% posts.forEach(post => { %> <% if
        (post.category[0].slug === 'course') { %>
      <div class="study-card" data-bg="<%= post.featured_image ? post.featured_image : './theme/IG_Academy/images/default.png' %>">
        <a href="/post/<%= post._id %>"
          ><%= post.title %><br />
          <p class="link-text">Explore</p></a
        >
      </div>
      <% } %> <% }) %> <% } %>
   
    </div>
  </div>
</section>